<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#48A8F3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:padding="3dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_next_bule_normal" />

        <TextView
            android:id="@+id/yanhuo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center"
            android:text="采购"
            android:textSize="18sp"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/Batch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:text="批采" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="商家"
            android:textColor="#3FA5FF"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinnerno"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="选择商家" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="仓库"
            android:textColor="#3FA5FF"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/warehouse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="选择仓库" />
    </LinearLayout>

    <LinearLayout
        android:background="#B2B2B2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bianhao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="序号" />

        <TextView
            android:id="@+id/mingcheng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="名称" />

        <TextView
            android:id="@+id/tiaoma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="条码" />

        <TextView
            android:id="@+id/shoujia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="数量" />

        <TextView
            android:id="@+id/shoujia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="进价" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="小计" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="库存" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/purchaselistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ecode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="商品条码"
            android:inputType="number"
            android:maxLength="13"
            android:textSize="12sp" />

        <Button
            android:id="@+id/fselect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.51"
            android:background="@drawable/selectoritemleft"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#F2978B" />

        <Button
            android:id="@+id/purchasescan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/selectoritemright"
            android:gravity="center"
            android:text="扫描添加商品"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/goodname"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:background="#C2C3C7"
            android:textSize="12sp"
            android:layout_marginRight="2dp"
            android:text="商品名:" />

        <TextView
            android:id="@+id/kucun"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
             android:background="#C2C3C7"
             android:textSize="12sp"
            android:gravity="center_vertical"
            android:text="库存:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/price1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="单价"
            android:inputType="numberSigned"
            android:maxLength="5"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/goodsnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="数量"
            android:inputType="number"
            android:maxLength="5"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <Button
            android:id="@+id/cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectoritemright"
            android:text="取消"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectoritemleft"
            android:enabled="false"
            android:text="提交" />
    </LinearLayout>

</LinearLayout>