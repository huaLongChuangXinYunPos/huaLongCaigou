<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#48A8F3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/opfinish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:padding="3dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_next_bule_normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center"
            android:text="采购"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/updategoods"
        style="@style/operate"
        android:layout_margin="10dp"
        android:text="更新商品" />

    <Button
        android:id="@+id/updatesupplier"
        style="@style/operate"
        android:layout_margin="10dp"
        android:text="更新商家" />

    <Button
        android:id="@+id/updat_CheckTast"
        style="@style/operate"
        android:layout_margin="10dp"
        android:text="更新任务" />

    <Button
        android:id="@+id/updatet_CheckTast_zone"
        style="@style/operate"
        android:layout_margin="10dp"
        android:text="更新子单" />
       <Button
        android:id="@+id/updatet_WareHouse"
        style="@style/operate"
        android:layout_margin="10dp"
        android:text="更新仓库" />

</LinearLayout>